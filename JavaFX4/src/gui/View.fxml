      <Label layoutX="14.0" layoutY="14.0" text="Calculate Sum">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" layoutX="43.0" layoutY="88.0" promptText="First number" />
      <TextField fx:id="txtNumber2" layoutX="43.0" layoutY="138.0" promptText="Second number" />
      <Button fx:id="btSum" layoutX="43.0" layoutY="192.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Button>
      <Label layoutX="156.0" layoutY="257.0" text="Result = ">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
      <Label fx:id="labelResult" layoutX="240.0" layoutY="261.0" prefHeight="18.0" prefWidth="114.0" />
   </children>
</AnchorPane>
